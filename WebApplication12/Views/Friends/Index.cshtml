@model IEnumerable<WebApplication12.ViewModels.FriendExpenseViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Friends</h1>
<hr />
<p>
    <a class="btn btn-success" asp-action="Create">Create New Friends</a>
</p>
<hr />
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                Name
            </th>
            <th>
                Contact Details
            </th>
            <th>
                Amount
            </th>
            <th>
                Actions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)

                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber) | 
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @if (item.ExpenseValue == 0)
                    {
                    <p class="btn btn-info">@item.ExpenseValue</p>
                    }
                    else
                    {
                        @if (item.ExpenseValue > 0.0)
                        {
                    <p class="btn btn-success">@item.ExpenseValue</p>
                        }
                        else
                        {
                    <p class="btn btn-danger">@item.ExpenseValue</p>
                        }

                    }

                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
